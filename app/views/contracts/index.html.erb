<a class="btn btn-lg btn-primary" role ="button"
  <%= link_to 'Novo Contrato', new_contract_path %>
</a>
<br>
<br>
<div class="panel panel-default">
  <div class="panel-heading">Lista Contratos</div>
    <table class="table">
      <thead>
        <tr>
          <th>Numero Contrato</th>
          <th>Cliente</th>
          <th>Endere√ßo Entrega</th>
          <th>Valor Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @contracts.each do |contract| %> 
        <tr>
          <th scope="row"><%= contract.contract_number %></th>
          <td><%= contract.customer.name %></td>
          <td><%= contract.delivery_address %></td>
          <td><%= contract.total_amount %></td>
          <td>
            <%= link_to 'Visualizar', contract_path(contract.id) %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

